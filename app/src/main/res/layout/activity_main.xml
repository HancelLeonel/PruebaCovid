<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="58dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contenedor_fragments"
        app:layout_constraintVertical_bias="0.641">

        <Button
            android:id="@+id/button_status"
            android:layout_width="97dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="Status"
            android:textAlignment="textStart"
            android:textSize="7sp"
            android:textStyle="bold"
            app:icon="@android:drawable/stat_notify_error"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button_information"
            android:layout_width="97dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="phones"
            android:textAlignment="textStart"
            android:textSize="7sp"
            android:textStyle="bold"
            app:icon="@android:drawable/stat_sys_phone_call"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button_map"
            android:layout_width="97dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="centres"
            android:textAlignment="textStart"
            android:textSize="4sp"
            android:textStyle="bold"
            app:icon="@android:drawable/ic_dialog_map"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button_news"
            android:layout_width="97dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="News"
            android:textAlignment="textStart"
            android:textSize="7sp"
            android:textStyle="bold"
            app:icon="?android:attr/actionModeFindDrawable"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/contenedor_fragments"
        android:layout_width="411dp"
        android:layout_height="618dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>